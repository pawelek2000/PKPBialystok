<Window x:Class="PKPBialystok.Windows.OrderDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PKPBialystok.Windows"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#FFEEDB">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Grid.ColumnSpan="3"
                BorderBrush="#4C3B4D"
                BorderThickness="10,10,10,0">
                    <Image Source="..\Images\PKPLogo.png"
                           HorizontalAlignment="Left"
                           Margin="10,10,0,0"/>
        </Border>
        
        <Border Grid.Row="1"
                Grid.ColumnSpan="3"
                Background="#ADA8B6"
                BorderBrush="#4C3B4D"
                BorderThickness="10,10,10,10"/>
        
        <Border Grid.Column="1"
                Grid.Row="1"
                Grid.RowSpan="2"
                Background="#4C3B4D"/>
        
        <Border Grid.Column="0"
                Grid.Row="2"
                Grid.ColumnSpan="3"
                BorderBrush="#4C3B4D"
                BorderThickness="10,0,10,10"/>
        <Label Grid.Row="1"
               Content="Przygotowywane"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="80"
               Foreground="#4C3B4D"/>
        <Label Grid.Row="1"
               Grid.Column="2"
               Content="Gotowe"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="80"
               Foreground="#4C3B4D"/>
    </Grid>
</Window>
